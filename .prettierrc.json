{
  "overrides": [
    {
      "files": "*.js, *.ts",
      "options": {
        "semi": true,
        "tabWidth": 2,
        "useTabs": false,
        "singleQuote": false
      }
    },
    {
      "files": [
        "*.html",
        "legacy/**/*.js"
      ],
      "options": {
        "tabWidth": 4
      }
    }
  ]
}
