{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "quotes": ["error", "double"],
    "max-len": [
      "error",
      { "code": 80, "ignoreTemplateLiterals": true, "ignoreComments": true }
    ]
  }
}
